{
  "software": [
    {
      "name": "Caching proxy: Squid",
      "version": "1.0.0",
      "installationSteps": {
        "Docker": [
          {
            "type": "conditionCheck",
            "value": "{{SERVICE.SQUID.NAME}}"
          },
          {
            "type": "conditionCheck",
            "value": "{{SERVICE.SQUID.NAME}}_cert"
          },
          {
            "type": "portRequired",
            "value": "{{SERVICE.SQUID.PORTS.CACHING_PORT}}"
          },
          {
            "type": "deploy",
            "value": "main.proxy.caching/docker/squid:1.0.0@:{{DOCKER.DOCKER_HOME}}/Squid"
          },
          {
            "type": "stack",
            "value": "{{DOCKER.DOCKER_HOME}}/Squid"
          },
          {
            "type": "check",
            "value": "{{SERVICE.SQUID.NAME}}"
          },
          {
            "type": "command",
            "value": "ln {{DOCKER.DOCKER_HOME}}/Squid/squid.service /etc/systemd/system/squid.service"
          },
          {
            "type": "command",
            "value": "sh {{SERVER.SERVER_HOME}}/Utils/setenforce.sh"
          },
          {
            "type": "command",
            "value": "systemctl enable squid.service"
          },
          {
            "type": "reboot",
            "value": "480"
          },
          {
            "type": "check",
            "value": "{{SERVICE.SQUID.NAME}}"
          },
          {
            "type": "portCheck",
            "value": "{{SERVICE.SQUID.PORTS.CACHING_PORT}}"
          },
          {
            "type": "command",
            "value": "curl -x \"localhost:{{SERVICE.SQUID.PORTS.CACHING_PORT}}\" http://www.google.com"
          }
        ]
      }
    }
  ]
}